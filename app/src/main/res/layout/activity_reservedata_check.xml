<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:text="통학버스 예약"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/hannamfree"
            android:background="@color/hannam_color"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_marginBottom="30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/reserve_data"
                android:fontFamily="@font/hannamfree"
                android:textColor="@color/hannam_text"
                android:text="reserve_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/hannamfree"
                android:textColor="@color/hannam_text"
                android:text="날짜, 노선, 장소가 맞으면 예약완료 버튼을 눌러주세요"/>

            <Button
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/reserve_complete"
                android:fontFamily="@font/hannamfree"
                android:background="@color/hannam_color"
                android:textColor="@color/white"
                android:text="예약 완료"/>


        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>