<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:text="버스 위치 확인"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/hannamfree"
            android:background="@color/hannam_color"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_marginBottom="30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/route1"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="@font/hannamfree"
                    android:textColor="@color/hannam_text"
                    android:textSize="30dp"
                    android:text="도안"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:id="@+id/route2"
                    android:textColor="@color/hannam_text"
                    android:lineSpacingExtra="10dp"
                    android:background="@color/white"
                    android:textSize="30dp"
                    android:fontFamily="@font/hannamfree"
                    android:text="세종
                                  노은"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/route3"
                    android:layout_margin="8dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/hannamfree"
                    android:textColor="@color/hannam_text"
                    android:textSize="30dp"
                    android:lineSpacingExtra="10dp"
                    android:text="계룡
                                  진잠
                                  관저동"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/route4"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/hannamfree"
                    android:textColor="@color/hannam_text"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:lineSpacingExtra="10dp"
                    android:text="가오동
                                  판암동"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>