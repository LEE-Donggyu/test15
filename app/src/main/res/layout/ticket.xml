<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="노선 : "
                android:textColor="@color/hannam_text" />

            <TextView
                android:id="@+id/routename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="받아온 노선"
                android:textColor="@color/hannam_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="날짜 : "
                android:textColor="@color/hannam_text" />

            <TextView
                android:id="@+id/DateTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="받아온 날짜"
                android:textColor="@color/hannam_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승자 : "
                android:textColor="@color/hannam_text" />

            <TextView
                android:id="@+id/NameTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승자 이름"
                android:textColor="@color/hannam_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승 지점 : "
                android:textColor="@color/hannam_text" />

            <TextView
                android:id="@+id/PickupnameTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승 지점"
                android:textColor="@color/hannam_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승 시간 : "
                android:textColor="@color/hannam_text" />

            <TextView
                android:id="@+id/TurnTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:text="탑승 시간"
                android:textColor="@color/hannam_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>