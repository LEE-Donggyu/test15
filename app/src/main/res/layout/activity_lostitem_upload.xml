<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostitemUploadActivity"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:text="분실물 올리기"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/hannamfree"
            android:background="@color/hannam_color"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_marginBottom="30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="58dp"
                android:fontFamily="@font/hannamfree"
                android:text="분실물"
                android:textAlignment="center"
                android:textColor="@color/hannam_text"
                android:textSize="40dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:hint="분실물 입력"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:fontFamily="@font/hannamfree"
                android:textSize="40dp"
                android:id="@+id/LostItemNameText"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannamfree"
                android:textAlignment="center"
                android:text="사 진"
                android:textColor="@color/hannam_text"
                android:textSize="40dp" />

            <Button
                android:id="@+id/findimgButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hannam_color"
                android:text="사진 찾기"
                android:fontFamily="@font/hannamfree"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uploadimg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hnulogo" />

            <Button
                android:id="@+id/finaluploadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploadimg"
                android:fontFamily="@font/hannamfree"
                android:background="@color/hannam_color"
                android:text="업로드"
                android:textColor="@color/white"
                android:textSize="40dp" />

        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>