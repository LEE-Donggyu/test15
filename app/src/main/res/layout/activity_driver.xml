<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driverActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:text="기본 경로"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/hannamfree"
            android:background="@color/hannam_color"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:id="@+id/route_name"
            android:layout_marginBottom="30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_dirve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:textColor="@color/hannam_text"
                android:fontFamily="@font/hannamfree"
                android:background="@color/white"
                android:textSize="35dp"
                android:text="운행시작" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:textColor="@color/hannam_text"
                android:fontFamily="@font/hannamfree"
                android:background="@color/white"
                android:textSize="35dp"
                android:text="분실물 업로드" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hannam_text"
                android:fontFamily="@font/hannamfree"
                android:background="@color/white"
                android:textSize="35dp"
                android:id="@+id/finditemupdate"
                android:text="분실물 관리"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:src="@drawable/hannam" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>